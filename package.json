{
  "name": "listly",
  "private": true,
  "type": "module",
  "author": "Dmitrii Mamonov",
  "scripts": {
    "build": "react-router build",
    "cf-typegen": "wrangler types",
    "deploy": "npm run build && wrangler deploy",
    "dev": "react-router dev",
    "preview": "npm run build && vite preview",
    "typecheck": "npm run cf-typegen && react-router typegen && tsc -b",
    "format": "prettier --write \"**/*.+(js|ts|tsx|json|css|html)\"",
    "db:generate": "drizzle-kit generate --config drizzle.config.ts",
    "db:migrate": "wrangler d1 migrations apply --local DB",
    "db:seed": "wrangler d1 execute --local --file=./drizzle/seed.sql",
    "db:migrate-production": "wrangler d1 migrations apply",
    "db:drop": "rm -rf ./.wrangler"
  },
  "dependencies": {
    "@conform-to/react": "^1.4.0",
    "@conform-to/zod": "^1.4.0",
    "@heroicons/react": "^2.2.0",
    "@radix-ui/react-navigation-menu": "^1.2.7",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.41.0",
    "isbot": "^5.1.17",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router": "^7.5.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.0.0",
    "@cloudflare/workers-types": "^4.20250413.0",
    "@faker-js/faker": "^9.7.0",
    "@react-router/dev": "^7.5.0",
    "@tailwindcss/vite": "^4.0.0",
    "@types/node": "^20",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.1",
    "drizzle-kit": "^0.30.6",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.0.0",
    "tsx": "^4.19.3",
    "typescript": "^5.7.2",
    "vite": "^6.2.1",
    "vite-tsconfig-paths": "^5.1.4",
    "wrangler": "^4.10.0"
  }
}
